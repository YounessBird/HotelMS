@model HotelMS.ViewModels.LoginVM

@{
Layout= "_AccountLayout";
ViewBag.Title ="Login";
}

<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>

            <div asp-validation-summary="All" class="text-danger"></div>
            <form method="POST">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" />
                </div>
                <div class="form-froup">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            </br>
            <a href="/users/auth/google" class="btn btn-block btn-social btn-google">
                <span class="fa fa-google"></span> Sign in with Google</a>
            <p class="lead mt-4">
                No Account? <a asp-action="Register">Register</a>
            </p>
        </div>
    </div>
</div>